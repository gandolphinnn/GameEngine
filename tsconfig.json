{
	"compilerOptions": {
		"target": "ES2022",
		"sourceMap": true,
		"rootDir": "app",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@gandolphinnn/shared": ["app/lib/shared/index.ts"],
			"@gandolphinnn/graphics": ["app/lib/graphics/src/index.ts"],
			"@gandolphinnn/inputs": ["app/lib/inputs/src/index.ts"],
			"@gandolphinnn/rigid": ["app/lib/rigid/src/index.ts"],
			"@gandolphinnn/game": ["app/lib/game/src/index.ts"],
			"*": ["node_modules"]
		}
	},
	"include": ["app"],
	"exclude": ["node_modules", "dist"]
}