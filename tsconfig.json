{
	"compilerOptions": {
		"target": "ES2023",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@gandolphinnn/game": ["src/game/index.ts"],
			"@gandolphinnn/graphics": ["src/graphics/index.ts"],
			"@gandolphinnn/inputs": ["src/inputs/index.ts"],
			"@gandolphinnn/rigid": ["src/rigid/index.ts"],
			"*": ["node_modules"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}